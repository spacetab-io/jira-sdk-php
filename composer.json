{
  "name": "spacetab-io/jira-sdk",
  "description": "Asynchronous PHP Jira SDK.",
  "license": "MIT",
  "authors": [
    {
      "name": "roquie",
      "email": "roquie0@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "amphp/http-client": "^4.5",
    "psr/log": "^1.1",
    "kelunik/retry": "^1.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^5.0",
    "spacetab-io/logger": "^2.0",
    "phpstan/phpstan": "^0.12.64"
  },
  "autoload": {
    "psr-4": {
      "Spacetab\\JiraSDK\\": "src/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "test": [
      "phpstan analyse src --level 5"
    ]
  }
}
